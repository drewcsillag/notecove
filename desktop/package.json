{
  "name": "@notecove/desktop",
  "version": "0.1.0",
  "description": "NoteCove Desktop Application",
  "main": "dist/main.js",
  "scripts": {
    "dev": "npm run build:main && concurrently \"npm run dev:renderer\" \"wait-on http://localhost:5173 && npm run dev:electron\"",
    "dev:renderer": "vite",
    "dev:electron": "cross-env NODE_ENV=development electron .",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "vite build",
    "build:main": "esbuild src/main.js src/preload.js --bundle --platform=node --outdir=dist --external:electron --external:fsevents",
    "build:dist": "npm run build && electron-builder",
    "test": "vitest",
    "test:e2e": "playwright test",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "npm run lint -- --fix",
    "clean": "rimraf dist dist-electron"
  },
  "dependencies": {
    "@tiptap/core": "^2.1.13",
    "@tiptap/extension-task-item": "^2.1.13",
    "@tiptap/extension-task-list": "^2.1.13",
    "@tiptap/pm": "^2.1.13",
    "@tiptap/starter-kit": "^2.1.13",
    "chokidar": "^3.5.3",
    "date-fns": "^2.30.0",
    "electron-store": "^8.1.0",
    "uuid": "^9.0.1",
    "y-prosemirror": "^1.2.5",
    "yjs": "^13.6.10"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "esbuild": "^0.19.11",
    "eslint": "^8.56.0",
    "jsdom": "^27.0.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vitest": "^1.1.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.notecove.desktop",
    "productName": "NoteCove",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "!dist-electron/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
