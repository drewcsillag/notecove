{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/bash-canary.sh",
            "statusMessage": "Checking memory canaries..."
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/edit-canary.sh",
            "statusMessage": "Checking read-before-edit..."
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/edit-canary.sh",
            "statusMessage": "Checking read-before-write..."
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/post-bash.sh",
            "statusMessage": "Logging command result..."
          }
        ]
      },
      {
        "matcher": "Read",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/track-read.sh",
            "statusMessage": "Tracking file read..."
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(nc_canary=1 cd:*)",
      "Bash(nc_canary=1 date:*)",
      "Bash(nc_canary=1 find:*)",
      "Bash(nc_canary=1 git add:*)",
      "Bash(nc_canary=1 git checkout:*)",
      "Bash(nc_canary=1 git diff:*)",
      "Bash(nc_canary=1 git log:*)",
      "Bash(nc_canary=1 git status:*)",
      "Bash(nc_canary=1 grep:*)",
      "Bash(nc_canary=1 head:*)",
      "Bash(nc_canary=1 ls:*)",
      "Bash(nc_canary=1 mkdir:*)",
      "Bash(nc_canary=1 nc_ci_passed=1 git commit:*)",
      "Bash(nc_canary=1 node:*)",
      "Bash(nc_canary=1 npm rebuild:*)",
      "Bash(nc_canary=1 npx jest --clearCache)",
      "Bash(nc_canary=1 npx jest:*)",
      "Bash(nc_canary=1 npx prettier:*)",
      "Bash(nc_canary=1 npx tsc:*)",
      "Bash(nc_canary=1 pnpm --filter @notecove/desktop build:*)",
      "Bash(nc_canary=1 pnpm --filter @notecove/desktop exec jest:*)",
      "Bash(nc_canary=1 pnpm --filter @notecove/desktop exec tsc:*)",
      "Bash(nc_canary=1 pnpm --filter @notecove/desktop test:*)",
      "Bash(nc_canary=1 pnpm --filter @notecove/desktop test:e2e window-state.spec.ts)",
      "Bash(nc_canary=1 pnpm --filter @notecove/desktop test:e2e:*)",
      "Bash(nc_canary=1 pnpm --filter @notecove/desktop typecheck:*)",
      "Bash(nc_canary=1 pnpm --filter @notecove/shared build:*)",
      "Bash(nc_canary=1 pnpm --filter @notecove/shared test -- --testPathPattern=\"schema.test.ts\")",
      "Bash(nc_canary=1 pnpm --filter @notecove/shared test:*)",
      "Bash(nc_canary=1 pnpm approve-builds:*)",
      "Bash(nc_canary=1 pnpm ci-local:*)",
      "Bash(nc_canary=1 pnpm eslint:*)",
      "Bash(nc_canary=1 pnpm exec electron-rebuild:*)",
      "Bash(nc_canary=1 pnpm exec playwright test:*)",
      "Bash(nc_canary=1 pnpm format:*)",
      "Bash(nc_canary=1 pnpm format:write:*)",
      "Bash(nc_canary=1 pnpm install:*)",
      "Bash(nc_canary=1 pnpm lint:*)",
      "Bash(nc_canary=1 pnpm prettier:*)",
      "Bash(nc_canary=1 pnpm rebuild:*)",
      "Bash(nc_canary=1 pnpm typecheck:*)",
      "Bash(nc_canary=1 pnpm:*)",
      "Bash(nc_canary=1 prettier:*)",
      "Bash(nc_canary=1 rm -rf /Users/drew/devel/notecove-3/packages/desktop/test-results/ci-runner/*)",
      "Bash(nc_canary=1 rm:*)",
      "Bash(nc_canary=1 sleep:*)",
      "Bash(nc_canary=1 tail:*)",
      "Bash(nc_canary=1 timeout 600 pnpm ci-local:*)",
      "Bash(nc_canary=1 npx jest:*)"
    ]
  }
}
