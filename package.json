{
  "name": "notecove",
  "version": "0.1.0",
  "private": true,
  "description": "Cross-platform notes application with offline-first CRDT synchronization",
  "author": "NoteCove Contributors",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e",
    "test:coverage": "turbo run test:coverage",
    "ci-local": "node tools/ci-local.js",
    "clean": "turbo run clean && rm -rf node_modules .turbo",
    "read-crdt-update": "node tools/read-crdt-update.js"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "prettier": "^3.1.0",
    "turbo": "^1.11.0",
    "typescript": "^5.3.3"
  }
}
