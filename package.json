{
  "name": "notecove",
  "version": "0.1.6",
  "private": true,
  "description": "Cross-platform notes application with offline-first CRDT synchronization",
  "author": "NoteCove Contributors",
  "license": "Apache-2.0",
  "packageManager": "pnpm@10.19.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e",
    "test:coverage": "turbo run test:coverage",
    "ci-local": "node tools/ci-local.js",
    "clean": "turbo run clean && rm -rf node_modules .turbo",
    "read-crdt-update": "node tools/read-crdt-update.js",
    "version:sync": "node tools/version-sync.js",
    "version:bump": "node tools/version-bump.js"
  },
  "pnpm": {
    "overrides": {
      "glob@>=10.2.0 <10.5.0": ">=10.5.0",
      "tar@7.5.1": ">=7.5.2",
      "js-yaml": "4.1.1",
      "esbuild@<0.25.0": "0.25.0"
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "eslint": "^9.17.0",
    "globals": "^16.2.0",
    "prettier": "^3.1.0",
    "turbo": "^2.6.1",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.21.0"
  }
}
