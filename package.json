{
  "name": "notecove",
  "version": "0.1.0",
  "description": "A cross-platform notes application with advanced organization and collaboration features",
  "main": "desktop/main.js",
  "homepage": "https://notecove.github.io",
  "repository": {
    "type": "git",
    "url": "https://github.com/drewcsillag/notecove.git"
  },
  "author": "Drew Csillag",
  "license": "Apache-2.0",
  "scripts": {
    "dev": "npm run dev:desktop",
    "dev:desktop": "cd desktop && npm run dev",
    "build": "npm run build:desktop && npm run build:website",
    "build:desktop": "cd desktop && npm run build",
    "build:website": "cd website && npm run build",
    "test": "npm run test:desktop",
    "test:desktop": "cd desktop && npm run test",
    "lint": "npm run lint:desktop",
    "lint:desktop": "cd desktop && npm run lint",
    "postinstall": "npm install --prefix desktop && npm install --prefix website"
  },
  "workspaces": [
    "desktop",
    "website",
    "shared"
  ],
  "devDependencies": {
    "@types/node": "^20.10.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}