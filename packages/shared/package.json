{
  "name": "@notecove/shared",
  "version": "0.1.1",
  "private": true,
  "description": "Shared TypeScript code for NoteCove (CRDT logic, types)",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/esm/index.d.ts",
      "require": "./dist/cjs/index.js",
      "import": "./dist/esm/index.js"
    },
    "./storage/versioning/sd-version": {
      "types": "./dist/esm/storage/versioning/sd-version.d.ts",
      "require": "./dist/cjs/storage/versioning/sd-version.js",
      "import": "./dist/esm/storage/versioning/sd-version.js"
    },
    "./storage/versioning/types": {
      "types": "./dist/esm/storage/versioning/types.d.ts",
      "require": "./dist/cjs/storage/versioning/types.js",
      "import": "./dist/esm/storage/versioning/types.js"
    },
    "./storage/update-manager": {
      "types": "./dist/esm/storage/update-manager.d.ts",
      "require": "./dist/cjs/storage/update-manager.js",
      "import": "./dist/esm/storage/update-manager.js"
    },
    "./history": {
      "types": "./dist/esm/history/index.d.ts",
      "require": "./dist/cjs/history/index.js",
      "import": "./dist/esm/history/index.js"
    }
  },
  "scripts": {
    "build": "pnpm build:esm && pnpm build:cjs",
    "build:esm": "tsc -p tsconfig.json",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "dev": "tsc --watch",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "clean": "rm -rf dist",
    "dump:log": "npx tsx tools/dump-crdtlog.ts",
    "dump:snapshot": "npx tsx tools/dump-snapshot.ts",
    "dump:activity": "npx tsx tools/dump-activity.ts"
  },
  "dependencies": {
    "@tiptap/core": "^2.26.4",
    "@tiptap/extension-collaboration": "^2.26.4",
    "@tiptap/extension-underline": "^2.26.4",
    "@tiptap/starter-kit": "^2.26.4",
    "lib0": "^0.2.94",
    "uuid": "^13.0.0",
    "y-prosemirror": "^1.3.7",
    "yjs": "^13.6.10"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.0",
    "@types/uuid": "^11.0.0",
    "@eslint/js": "^9.17.0",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "esbuild": "^0.27.0",
    "eslint": "^9.17.0",
    "globals": "^16.2.0",
    "typescript-eslint": "^8.21.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
