{
  "name": "@notecove/desktop",
  "version": "0.1.0",
  "description": "NoteCove Desktop App (Electron)",
  "main": "dist-electron/main/index.js",
  "author": "NoteCove Contributors",
  "license": "Apache-2.0",
  "private": true,
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "build:all": "pnpm build && electron-builder --mac --win --linux",
    "build:mac": "pnpm build && electron-builder --mac",
    "build:win": "pnpm build && electron-builder --win",
    "build:linux": "pnpm build && electron-builder --linux",
    "preview": "electron-vite preview",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "pretest": "pnpm rebuild:node",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "pretest:e2e": "pnpm exec electron-rebuild -f -w better-sqlite3 && pnpm exec electron-rebuild -f -w @mongodb-js/zstd",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "rebuild": "npx @electron/rebuild",
    "rebuild:node": "cd ../../node_modules/.pnpm/better-sqlite3@12.4.1/node_modules/better-sqlite3 && npm run build-release",
    "rebuild:electron": "pnpm exec electron-rebuild -f -w better-sqlite3 && pnpm exec electron-rebuild -f -w @mongodb-js/zstd",
    "migrate:flag-byte": "tsx src/main/storage/migrate-flag-byte.ts"
  },
  "dependencies": {
    "@electron-toolkit/utils": "^3.0.0",
    "@emotion/react": "^11.11.3",
    "@emotion/styled": "^11.11.0",
    "@minoru/react-dnd-treeview": "^3.5.3",
    "@mongodb-js/zstd": "^2.0.1",
    "@mui/icons-material": "^5.15.0",
    "@mui/material": "^5.15.0",
    "@mui/x-tree-view": "^8.15.0",
    "@notecove/shared": "workspace:*",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/exporter-metrics-otlp-http": "^0.207.0",
    "@opentelemetry/resources": "^2.2.0",
    "@opentelemetry/sdk-metrics": "^2.2.0",
    "@opentelemetry/sdk-node": "^0.207.0",
    "@opentelemetry/semantic-conventions": "^1.37.0",
    "@sereneinserenade/tiptap-search-and-replace": "^0.1.1",
    "@tiptap/extension-collaboration": "^2.26.4",
    "@tiptap/extension-underline": "^2.26.4",
    "@tiptap/pm": "^2.26.4",
    "@tiptap/react": "^2.26.4",
    "@tiptap/starter-kit": "^2.26.4",
    "@tiptap/suggestion": "^2.27.1",
    "better-sqlite3": "^12.4.1",
    "chokidar": "^3.5.3",
    "date-fns": "^4.1.0",
    "i18next": "^23.7.0",
    "react": "^18.2.0",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dom": "^18.2.0",
    "react-i18next": "^14.0.0",
    "react-resizable-panels": "^3.0.6",
    "tippy.js": "^6.3.7",
    "yjs": "^13.6.10"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "@playwright/test": "^1.56.1",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@types/better-sqlite3": "^7.6.8",
    "@types/jest": "^29.5.11",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^38.4.0",
    "electron-builder": "^26.0.12",
    "electron-vite": "^2.0.0",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "playwright": "^1.56.1",
    "ts-jest": "^29.1.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vite": "^5.0.10"
  }
}
